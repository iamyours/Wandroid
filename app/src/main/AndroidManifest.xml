<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="io.github.iamyours.wandroid">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity
                android:name=".MainActivity"
                android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.web.WebActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.history.HistoryArticleListActivity" />
        <activity android:name=".ui.collect.CollectListActivity" />
        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.cache.CacheArticleListActivity" />
        <activity android:name=".ui.xxmh.XBookListActivity" />
        <activity android:name=".ui.xxmh.XBookDetailActivity" />
        <activity android:name=".ui.xxmh.XPictureListActivity" />
        <activity
                android:name=".ui.web.ImageShowActivity"
                android:theme="@style/AppThemeTransparent" android:configChanges="orientation|keyboardHidden|screenSize"/>
    </application>

</manifest>